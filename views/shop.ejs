<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods ) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">Greate Book</h1>
                        </header>
                        <div class="card__content">
                            <h2 class="product__price">$19.90</h2>
                            <h2><%= product.title %></h2>
                            <p class="product__description">A very intresting book</p>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>